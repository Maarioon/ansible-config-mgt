


 pipeline {
     agent any
     
     environment {
         ANSIBLE_CONFIG = "${WORKSPACE}/deploy/ansible.cfg"
     }
 
     stages {
         stage('Initial Cleanup') {
             steps {
                 dir("${WORKSPACE}") {
                     deleteDir()
                 }
             }
         }
         stage('Checkout SCM') {
             steps {
                 git branch: 'main', 
                     url: 'https://github.com/Maarioon/ansible-config-mgt.git
             }
         }
         stage('Build') {
             steps {
                 script {
                     sh 'echo "Building Stage"'
                 }
             }
         }
 
         stage('Test') {
             steps {
                 script {
                     sh 'echo "Testing Stage"'
                 }
             }
         }
 
         stage('Package') {
             steps {
                 script {
                     sh 'echo "Packaging Stage"'
                 }
             }
         }
 
         stage('Deploy') {
             steps {
                 script {
                     sh 'echo "Deploying Stage"'
                 }
             }
         }
     }
 }
