pipeline {
    agent any

    environment {
        ANSIBLE_CONFIG = "${WORKSPACE}/deploy/.ansible.cfg"  // Points to the Ansible config file in the deploy directory
    }

    tools {
        ansible 'ansible'  // Make sure 'ansible' is configured in Jenkins Global Tool Configuration
    }

    stages {
        stage('Checkout') {
            steps {
                // Checkout code from SCM (your Git repository)
                checkout scm
		git branch: 'main', url: 'https://github.com/Maarioon/ansible-config-mgt.git'
            }
        }

        stage('Run Ansible Playbook') {
            steps {
                script {
                    // Run the Ansible playbook against UAT environment
                   ansiblePlaybook credentialsId: 'private_key', disableHostKeyChecking: true, installation: 'ansible', inventory: 'inventory', playbook: 'playbooks', vaultTmpPath: ''
                }
            }
        }
    }
}

