pipeline {
    agent any

    environment {
        ANSIBLE_CONFIG = "${WORKSPACE}/deploy/.ansible.cfg"
    }

    tools {
        ansible 'ansible'
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
                git branch: 'main', url: 'https://github.com/Maarioon/ansible-config-mgt.git'
            }
        }

        stage('Run Ansible Playbook') {
            steps {
                script {
                    sh "/usr/bin/ansible-playbook ${WORKSPACE}/ansible-config-mgt/playbooks/site.yml -i ${WORKSPACE}/ansible-config-mgt/inventory/dev --private-key /var/lib/jenkins/workspace/ansible-config-mgt_main/ssh_key -u \$USER"
                }
            }
        }
    }
}

